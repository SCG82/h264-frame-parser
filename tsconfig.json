{
	"compilerOptions": {
		"outDir": "dist",
		"sourceMap": true,
		"declaration": true,
		"moduleResolution": "Node16",

		"module": "ES6",
		"target": "es2020",
		"lib": ["es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "DOM"],
		"esModuleInterop": true,

		"strict": true,
		"noImplicitAny": true,
		"strictBindCallApply": true,
		"strictNullChecks": true,
	},
	"include": [
		"lib"
	]
}
